rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      // Ensure username uniqueness
      allow create: if request.resource.data.username == null 
        || !exists(/databases/$(database)/documents/users/{anyUserId}) 
        || !get(/databases/$(database)/documents/users/{anyUserId}).data.username.matches(request.resource.data.username);
    }

    match /posts/{postId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /comments/{commentId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /likes/{likeId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /opportunities/{opportunityId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}
