import { useEffect, useState } from "react";
import { useNavigate } from "react-router-dom";
import { auth, db } from "../firebase";
import {
  doc,
  onSnapshot,
  collection,
  query,
  where,
  getDocs,
  orderBy,
} from "firebase/firestore";

function Profile() {
  const navigate = useNavigate();
  const [profile, setProfile] = useState({
    fullName: "",
    stageName: "",
    bio: "",
    nationality: "",
    city: "",
    instruments: "",
    photoURL: "",
  });

  const [stats, setStats] = useState({
    gigs: 0,
    posts: 0,
    followers: 0,
    following: 0,
  });

  const [posts, setPosts] = useState([]);

  useEffect(() => {
    const user = auth.currentUser;
    if (!user) return;

    const docRef = doc(db, "users", user.uid);

    // Listen for real-time profile updates
    const unsubscribeProfile = onSnapshot(docRef, (docSnap) => {
      if (docSnap.exists()) {
        setProfile(docSnap.data());
      }
    });

    // Fetch stats
    const fetchStats = async () => {
      try {
        const gigsQuery = query(
          collection(db, "opportunities"),
          where("userId", "==", user.uid)
        );
        const gigsSnap = await getDocs(gigsQuery);

        const postsQuery = query(
          collection(db, "posts"),
          where("userId", "==", user.uid)
        );
        const postsSnap = await getDocs(postsQuery);

        const followersSnap = await getDocs(
          collection(db, "users", user.uid, "followers")
        );

        const followingSnap = await getDocs(
          collection(db, "users", user.uid, "following")
        );

        setStats({
          gigs: gigsSnap.size,
          posts: postsSnap.size,
          followers: followersSnap.size,
          following: followingSnap.size,
        });
      } catch (err) {
        console.error("Error fetching stats:", err);
      }
    };

    // Fetch posts in real-time
    const unsubscribePosts = onSnapshot(
      query(
        collection(db, "posts"),
        where("userId", "==", user.uid),
        orderBy("createdAt", "desc")
      ),
      (querySnap) => {
        const postsData = [];
        querySnap.forEach((doc) => postsData.push({ id: doc.id, ...doc.data() }));
        setPosts(postsData);
      }
    );

    fetchStats();

    return () => {
      unsubscribeProfile();
      unsubscribePosts();
    };
  }, []);

  return (
    <div className="relative space-y-6 p-4 max-w-3xl mx-auto">
      {/* Settings button */}
      <button
        onClick={() => navigate("/settings")}
        className="absolute top-4 right-4 bg-gray-200 px-3 py-1 rounded hover:bg-gray-300"
      >
        ‚öôÔ∏è Settings
      </button>

      {/* Profile section */}
      <div className="flex items-center space-x-4">
        <div className="w-24 h-24 bg-gray-300 rounded-full overflow-hidden">
          {profile.photoURL && (
            <img
              src={profile.photoURL}
              alt="Profile"
              className="w-full h-full object-cover"
            />
          )}
        </div>

        <div>
          <h2 className="text-2xl font-bold">{profile.fullName || "Full Name"}</h2>
          <p className="text-gray-600 italic">
            {profile.stageName ? `"${profile.stageName}"` : ""}
          </p>
          <p className="text-gray-600">{profile.bio || "Bio..."}</p>
          <p className="text-gray-500 text-sm">
            {profile.nationality || "Nationality"} ‚Ä¢ {profile.city || "City"}
          </p>
          <p className="text-gray-500 text-sm">
            {profile.instruments || "Instruments / Skills"}
          </p>

          {/* Stats section */}
          <div className="flex gap-4 mt-2 text-sm font-semibold text-gray-700">
            <span>
              <strong>{stats.gigs}</strong> Gigs
            </span>
            <span>
              <strong>{stats.posts}</strong> Posts
            </span>
            <span>
              <strong>{stats.followers}</strong> Followers
            </span>
            <span>
              <strong>{stats.following}</strong> Following
            </span>
          </div>
        </div>
      </div>

      {/* Edit Profile button */}
      <button
        onClick={() => navigate("/edit-profile")}
        className="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
      >
        Edit Profile
      </button>

      {/* My Posts header */}
      <div className="flex items-center justify-between mt-6">
        <h3 className="text-xl font-semibold">My Posts</h3>
        <button
          onClick={() => navigate("/new-post")}
          className="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600"
        >
          New Post
        </button>
      </div>

      {/* Posts Grid */}
      <div className="grid grid-cols-3 gap-2 mt-2">
        {posts.length > 0 ? (
          posts.map((post) => {
            const mediaURL = post.mediaURLs?.[0]; // first media file
            if (!mediaURL) return null;

            const isVideo =
              mediaURL.endsWith(".mp4") ||
              mediaURL.endsWith(".mov") ||
              mediaURL.endsWith(".webm");

            return (
              <div
                key={post.id}
                className="relative group aspect-square overflow-hidden bg-gray-200 rounded-xl border-[3px] border-blue-400 border-dashed shadow-md"
              >
                {isVideo ? (
                  <video
                    src={mediaURL}
                    className="w-full h-full object-cover"
                    muted
                    loop
                    playsInline
                  />
                ) : (
                  <img
                    src={mediaURL}
                    alt="Post"
                    className="w-full h-full object-cover"
                  />
                )}

                {/* Overlay for multiple media */}
                {post.mediaURLs && post.mediaURLs.length > 1 && (
                  <div className="absolute top-1 right-1 flex items-center bg-black bg-opacity-60 px-2 py-1 rounded-lg">
                    <span className="text-white text-xs mr-1">üé∂</span>
                    <span className="text-white text-xs">+{post.mediaURLs.length - 1}</span>
                  </div>
                )}

                {/* Hover overlay for video */}
                {isVideo && (
                  <div className="absolute inset-0 flex items-center justify-center opacity-0 group-hover:opacity-100 transition">
                    <span className="text-white text-3xl">‚ñ∂</span>
                  </div>
                )}
              </div>
            );
          })
        ) : (
          <div className="col-span-full flex flex-col items-center text-gray-500 animate-pulse">
            <div className="text-5xl mb-2">üéµ</div>
            <p className="text-center">You haven't posted anything yet.</p>
            <p className="text-center text-sm">Share your first performance or creation!</p>
          </div>
        )}
      </div>
    </div>
  );
}

export default Profile;
