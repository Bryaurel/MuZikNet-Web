import React, { useState } from 'react';
import { signOut } from 'firebase/auth';
import { auth } from '../firebase';
import { useNavigate } from 'react-router-dom';

const Settings = () => {
  const navigate = useNavigate();

  // State for Edit Profile fields
  const [profile, setProfile] = useState({
    fullName: '',
    stageName: '',
    bio: '',
    nationality: '',
    city: '',
    instruments: '',
    profilePhoto: null
  });

  const handleChange = (e) => {
    const { name, value, files } = e.target;
    setProfile({
      ...profile,
      [name]: files ? files[0] : value
    });
  };

  const handleSaveProfile = (e) => {
    e.preventDefault();
    // Placeholder for saving logic
    alert('Profile saved successfully (functionality coming soon).');
  };

  const handleLogout = async () => {
    await signOut(auth);
    navigate('/login');
  };

  return (
    <div className="settings-page p-6 bg-gray-100 min-h-screen">
      <h1 className="text-3xl font-bold mb-6 text-center">Settings</h1>

      {/* Dashboard Section */}
      <section className="bg-white p-4 rounded-2xl shadow mb-6">
        <h2 className="text-xl font-semibold mb-2">Dashboard</h2>
        <p className="text-gray-600">Feature coming soon... ðŸŽ¯</p>
      </section>

      {/* Edit Profile Section */}
      <section className="bg-white p-4 rounded-2xl shadow mb-6">
        <h2 className="text-xl font-semibold mb-4">Edit Profile</h2>
        <form onSubmit={handleSaveProfile} className="space-y-4">
          <div>
            <label className="block mb-1 font-medium">Profile Photo</label>
            <input
              type="file"
              accept="image/*"
              name="profilePhoto"
              onChange={handleChange}
              className="w-full border rounded p-2"
            />
          </div>

          <div>
            <label className="block mb-1 font-medium">Full Name</label>
            <input
              type="text"
              name="fullName"
              value={profile.fullName}
              onChange={handleChange}
              className="w-full border rounded p-2"
              required
            />
          </div>

          <div>
            <label className="block mb-1 font-medium">Stage Name (Optional)</label>
            <input
              type="text"
              name="stageName"
              value={profile.stageName}
              onChange={handleChange}
              className="w-full border rounded p-2"
            />
          </div>

          <div>
            <label className="block mb-1 font-medium">Bio</label>
            <textarea
              name="bio"
              value={profile.bio}
              onChange={handleChange}
              className="w-full border rounded p-2"
              rows="3"
            ></textarea>
          </div>

          <div>
            <label className="block mb-1 font-medium">Nationality</label>
            <input
              type="text"
              name="nationality"
              value={profile.nationality}
              onChange={handleChange}
              className="w-full border rounded p-2"
              required
            />
          </div>

          <div>
            <label className="block mb-1 font-medium">City of Residence</label>
            <input
              type="text"
              name="city"
              value={profile.city}
              onChange={handleChange}
              className="w-full border rounded p-2"
              required
            />
          </div>

          <div>
            <label className="block mb-1 font-medium">Instruments / Skills</label>
            <input
              type="text"
              name="instruments"
              value={profile.instruments}
              onChange={handleChange}
              className="w-full border rounded p-2"
            />
          </div>

          <button
            type="submit"
            className="bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600"
          >
            Save Changes
          </button>
        </form>
      </section>

      {/* Change Email Section */}
      <section className="bg-white p-4 rounded-2xl shadow mb-6">
        <h2 className="text-xl font-semibold mb-2">Change Email Address</h2>
        <p className="text-gray-600">Feature coming soon...</p>
      </section>

      {/* Change Password Section */}
      <section className="bg-white p-4 rounded-2xl shadow mb-6">
        <h2 className="text-xl font-semibold mb-2">Change Password</h2>
        <p className="text-gray-600">Feature coming soon...</p>
      </section>

      {/* Manage Profile Visibility */}
      <section className="bg-white p-4 rounded-2xl shadow mb-6">
        <h2 className="text-xl font-semibold mb-2">Manage Profile Visibility</h2>
        <p className="text-gray-600">Feature coming soon...</p>
      </section>

      {/* Logout Button */}
      <div className="text-center mt-8">
        <button
          onClick={handleLogout}
          className="bg-red-500 text-white px-6 py-2 rounded hover:bg-red-600"
        >
          Log Out
        </button>
      </div>
    </div>
  );
};

export default Settings;